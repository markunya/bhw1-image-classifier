{
    "exp": {
        "project_name": "dl_bhw_1",
        "device": "cuda",
        "seed": 42,
        "use_wandb": true
    },
    "data": {
        "trainval_dataset": "simple_trainval_dataset",
        "test_dataset": "simple_test_dataset",
        "dataset_dir": "..\\bhw1",
        "train_batch_size": 64,
        "val_batch_size": 64,
        "val_size": 0.1,
        "workers": 4
    },
    "checkpoint_path": null,
    "inference": {
        "output_dir": ".\\",
        "test_batch_size": 64
    },
    "train": {
        "classifier": "resnet",
        "classifier_args": {
            "num_blocks": [1, 1, 1]
        },
        "optimizer": "adamW",
        "optimizer_args": {
            "lr": 0.0001
        },
        "scheduler": "multi_step",
        "scheduler_metric": "accuracy",
        "scheduler_args": {
            "milestones": [6],
            "gamma": 0.1
        },
        "val_metrics": [
            "accuracy"
        ],
        "epochs": 8,
        "checkpoint_epoch": 8,
        "checkpoints_dir": ".\\checkpoints"
    },
    "augmentations": {
    },
    "losses": {
        "CrossEntropyLoss": 1.0
    }
}
